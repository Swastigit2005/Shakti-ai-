<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Profile and Calendar Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Profile Icon -->
                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:padding="8dp"
                    android:contentDescription="Profile" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Date Title -->
                <TextView
                    android:id="@+id/tv_current_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="November 14"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_gravity="center" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Calendar Full View Icon -->
                <ImageView
                    android:id="@+id/btn_calendar_view"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_month"
                    android:padding="12dp"
                    android:contentDescription="Calendar"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <!-- Week Calendar View -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:backgroundTint="#E8F5FF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Day Labels (S M T W T F S) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="S"
                            android:textSize="12sp"
                            android:textColor="#78909C"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="M"
                            android:textSize="12sp"
                            android:textColor="#78909C"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="T"
                            android:textSize="12sp"
                            android:textColor="#78909C"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="W"
                            android:textSize="12sp"
                            android:textColor="#78909C"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="T"
                            android:textSize="12sp"
                            android:textColor="#78909C"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TODAY"
                            android:textSize="10sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="S"
                            android:textSize="12sp"
                            android:textColor="#78909C"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Date Numbers with RecyclerView for dynamic dates -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_week_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:listitem="@android:layout/simple_list_item_1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- AI Prediction Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prediction"
                        android:textSize="14sp"
                        android:textColor="#78909C"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_period_prediction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Period in"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_days_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14 days"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tv_pregnancy_chance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See why pregnancy chances may be high â€º"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginBottom="24dp" />

                    <!-- Log Period Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_log_period"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:text="Log period"
                        android:textSize="16sp"
                        android:textColor="#00ACC1"
                        app:cornerRadius="28dp"
                        app:backgroundTint="#FFFFFF"
                        app:strokeColor="#00ACC1"
                        app:strokeWidth="2dp"
                        android:paddingStart="32dp"
                        android:paddingEnd="32dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Refer Card (Optional) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_refer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFF0F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Refer a friend to Shakti ðŸ’—"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gift your friend 30 days of free\nPremium to help them thrive!"
                            android:textSize="13sp"
                            android:textColor="#424242" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@android:drawable/ic_menu_share"
                        android:padding="16dp"
                        android:contentDescription="Gift" />

                    <ImageView
                        android:id="@+id/btn_close_refer"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Close"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- My Daily Insights -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My daily insights Â· Today"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Horizontal Scrolling Insight Cards -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_daily_insights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                tools:listitem="@android:layout/simple_list_item_1" />

            <!-- Spacer for bottom navigation -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

            android:textColor="@color/text_secondary"
            android:textStyle="italic"
            android:padding="12dp"
            android:background="#FFF3CD"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

        </androidx.cardview.widget.CardView>

        <!-- Disclaimer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš ï¸ If you're experiencing a mental health emergency, please call 112 or your local emergency services immediately."

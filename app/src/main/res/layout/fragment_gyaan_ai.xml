<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GYAAN - Education Access"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Scholarship Finder â€¢ 500+ Schemes â€¢ Virtual Mentorship â€¢ Women Leaders Stories"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Quick Access Cards Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Access"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <!-- Find Scholarships Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/quick_card_scholarships"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/gyaan_color"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŽ“"
                                android:textSize="32sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Find\nScholarships"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Free Courses Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/quick_card_courses"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/gyaan_color"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’»"
                                android:textSize="32sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Free\nCourses"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Find Mentor Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/quick_card_mentor"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/gyaan_color"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ‘©â€ðŸ«"
                                android:textSize="32sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Find\nMentor"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Success Stories Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/quick_card_stories"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/gyaan_color"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒŸ"
                                android:textSize="32sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Success\nStories"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <!-- Cross-Link to Legal Rights -->
            <Button
                android:id="@+id/btn_goto_legal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="âš–ï¸ Return to Legal Rights &amp; Justice Module"
                android:textSize="12sp"
                android:backgroundTint="@color/nyaya_color"
                android:textColor="@color/white" />

            <!-- AI Scholarship Matcher -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ” AI-Powered Scholarship Matcher"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search 500+ government &amp; private scholarships - we'll find what you're eligible for"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="16dp" />

                    <EditText
                        android:id="@+id/category_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your Category"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/state_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="State"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/course_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Course Interested In"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/income_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Family Income (Annual)"
                        android:padding="12dp"
                        android:inputType="number"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/percentage_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="12th Standard Percentage"
                        android:padding="12dp"
                        android:inputType="number"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btn_find_scholarships"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ” Find My Scholarships"
                        android:backgroundTint="@color/gyaan_color"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Application Assistance -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Application Assistance"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="We help you with every step"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btn_pre_fill_forms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“„ Pre-Fill Forms"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn_document_checklist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ Document Checklist"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn_deadline_reminders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â° Deadline Reminders"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn_application_tracking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Application Tracking" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Career Guidance -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Career Guidance"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btn_virtual_mentorship"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Virtual Mentorship Program"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn_women_leaders_stories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Women Leaders Stories"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn_skill_development"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Free Skill Development Courses" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

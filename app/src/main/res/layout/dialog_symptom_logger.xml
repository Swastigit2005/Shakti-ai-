<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_symptom_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#111827" />

    <TextView
        android:id="@+id/tv_symptom_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cycle day --"
        android:textSize="13sp"
        android:textColor="#6B7280"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E7EB" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What are you feeling today?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chip_feeling_eggwhite"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Egg white"
                    android:textSize="12sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:cornerRadius="999dp"
                    android:backgroundTint="#F3F4FF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chip_feeling_calm"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Calm"
                    android:textSize="12sp"
                    android:layout_marginStart="6dp"
                    app:cornerRadius="999dp"
                    android:backgroundTint="#FFF7ED" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chip_feeling_creamy"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Creamy"
                    android:textSize="12sp"
                    android:layout_marginStart="6dp"
                    app:cornerRadius="999dp"
                    android:backgroundTint="#EEF2FF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chip_feeling_cravings"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cravings"
                    android:textSize="12sp"
                    android:layout_marginStart="6dp"
                    app:cornerRadius="999dp"
                    android:backgroundTint="#FEF3C7" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mood"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/group_mood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptoms"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/group_symptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sex and sex drive"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/group_sex_drive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/btn_cancel_symptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Button
            android:id="@+id/btn_save_symptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginStart="12dp" />
    </LinearLayout>

</LinearLayout>

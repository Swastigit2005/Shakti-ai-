<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_feature"
    android:layout_width="280dp"
    android:layout_height="360dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_feature_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meet friends like you, near you."
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:lineSpacingExtra="4dp" />

        <!-- Feature Image/Illustration Area -->
        <FrameLayout
            android:id="@+id/feature_illustration"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F5F5F5"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/img_feature_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_menu_compass"
                android:layout_gravity="center"
                android:contentDescription="Feature illustration" />
        </FrameLayout>

        <!-- Feature Description -->
        <TextView
            android:id="@+id/tv_feature_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect with women nearby"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
